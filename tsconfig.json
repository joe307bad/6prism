{
  "extends": "./tsconfig.build.json",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@6prism/*": ["packages/*/services"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "types": ["node"],
    "experimentalDecorators": true
  },
  "include": ["packages/**/services/*.ts", "packages/**/moleculer.config.ts"]
}
