{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@6prism/*": [
        "packages/*/services"
      ]
    },
    "jsx": "preserve",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "packages/**/test/*",
    "packages/**/src/*",
    "packages/**/services/*",
    "packages/**/moleculer.config.ts",
    "packages/backups/sixprism-backups.js"
  ],
  "exclude": [
    "packages/**/webpack.config.js"
  ]
}